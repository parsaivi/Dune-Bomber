<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../CSS/ScoreBoard.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ScoreBoardView">
    <children>
        <ImageView nodeOrientation="INHERIT" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <image>
                <Image url="@../Images/scoreBoard.jpg" />
            </image>
        </ImageView>
        <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: rgba(0, 0, 0, 0.5);" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Scoreboard" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="36.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                    </VBox.margin>
                </Label>
                <VBox alignment="CENTER" spacing="20.0">
                    <children>
                        <VBox style="-fx-background-color: #d9b38c; -fx-padding: 10;">
                            <children>
                                <Label fx:id="firstPlaceLabel" textFill="BLACK">
                                    <font>
                                        <Font name="Arial Bold" size="24.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox style="-fx-background-color: #b3b3b3; -fx-padding: 10;">
                            <children>
                                <Label fx:id="secondPlaceLabel" textFill="BLACK">
                                    <font>
                                        <Font name="Arial Bold" size="18.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox style="-fx-background-color: #cd7f32; -fx-padding: 10;">
                            <children>
                                <Label fx:id="thirdPlaceLabel" textFill="BLACK">
                                    <font>
                                        <Font name="Arial Bold" size="18.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </VBox>
                <VBox fx:id="scoreboardContainer" spacing="15.0" styleClass="chart">
                    <!-- Scores will be dynamically added here -->
                </VBox>
                <HBox alignment="CENTER">
                    <children>
                        <Label text="Sort by:" textFill="WHITE">
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Label>
                        <ChoiceBox fx:id="sortChoice" styleClass="choice-box">
                            <String fx:value="Points" />
                            <String fx:value="Name" />
                        </ChoiceBox>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
      <Button fx:id="backButton" layoutX="374.0" layoutY="618.0" mnemonicParsing="false" text="Back" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="350.0" AnchorPane.rightAnchor="350.0" styleClass="button" onMouseClicked="#backButtonClicked"/>
    </children>
</AnchorPane>
